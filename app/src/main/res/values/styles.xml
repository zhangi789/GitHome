<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- MD风格主题 theme  -->
        <!--状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--标题栏颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--主题控件颜色  进度条、edittext指针颜色等 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!--主题文字颜色 -->
        <!--<item name="android:textColorPrimary">@color/colorTheme</item>-->

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--activity统一切换动画 右进右出-->
        <item name="android:windowAnimationStyle">@style/activityAnimation1</item>
    </style>

    <!-- activity界面切换动画 -->
    <style name="activityAnimation1" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/slide_right_out</item>
    </style>



    <!-- Main activity theme. -->
    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- MD风格主题 theme  -->
        <!--状态栏颜色 -->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--标题栏颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--主题控件颜色  进度条、edittext指针颜色等 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!--主题文字颜色 -->
        <!--<item name="android:textColorPrimary">@color/colorTheme</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--activity统一切换动画 右进右出-->
        <item name="android:windowAnimationStyle">@style/activityAnimation1</item>
    </style>

</resources>
