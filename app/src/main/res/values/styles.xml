    <!-- activity界面切换动画 -->
    <style name="activityAnimation1" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/slide_right_out</item>
    </style>



    <!-- Main activity theme. -->
    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- MD风格主题 theme  -->
        <!--状态栏颜色 -->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--标题栏颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--主题控件颜色  进度条、edittext指针颜色等 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!--主题文字颜色 -->
        <!--<item name="android:textColorPrimary">@color/colorTheme</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--activity统一切换动画 右进右出-->
        <item name="android:windowAnimationStyle">@style/activityAnimation1</item>
    </style>



    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>

    </style>
    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <!-- Customize your theme here. -->
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextAppearanceHome" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>




    <style name="news_text_style">
        <item name="android:textColor">#AEAEAE</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0.0dip</item>
    </style>

    <style name="news_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="dialogSlideAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_slide_out</item>
    </style>

</resources>
